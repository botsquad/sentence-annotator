{
  "name": "@botsquad/sentence-annotator",
  "version": "0.4.10",
  "description": "Typescript React component to annotate (label) sentences",
  "keywords": [],
  "main": "dist/sentence-annotator.umd.js",
  "module": "dist/sentence-annotator.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": ["dist"],
  "author": "Arjan Scherpenisse <arjan@scherpenisse.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/botsquad/sentence-annotator"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.{ts,tsx}' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.js",
    "doc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.js -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache && npm run build",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": ["prettier --write", "git add"]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/test/", "example"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": ["src/*.{js,ts,tsx}"],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "../test/__mock__.ts"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^10.11.0",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.1",
    "jest": "^25.0.0",
    "jest-config": "^25.0.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2",
    "prettier": "^1.19.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.27.14",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.25.3",
    "semantic-release": "^15.9.16",
    "shelljs": "^0.8.3",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^24.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.6",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "@blueprintjs/core": "^3.22.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "lodash": "^4.17.15"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
